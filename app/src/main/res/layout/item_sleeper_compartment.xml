<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/compartment_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Khoang 3" />

        <!-- Left Column -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/bed_t3l"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:checkable="true"
            android:textColor="@color/seat_text_color"
            app:backgroundTint="@color/seat_background_tint"
            app:strokeColor="@color/seat_stroke_color"
            app:layout_constraintEnd_toStartOf="@+id/guideline_center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/compartment_label"
            tools:text="Giường 3 Trái" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bed_t2l"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:textColor="@color/seat_text_color"
            app:backgroundTint="@color/seat_background_tint"
            app:strokeColor="@color/seat_stroke_color"
            app:layout_constraintEnd_toEndOf="@id/bed_t3l"
            app:layout_constraintStart_toStartOf="@id/bed_t3l"
            app:layout_constraintTop_toBottomOf="@id/bed_t3l"
            tools:text="Giường 2 Trái" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bed_t1l"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:textColor="@color/seat_text_color"
            app:backgroundTint="@color/seat_background_tint"
            app:strokeColor="@color/seat_stroke_color"
            app:layout_constraintEnd_toEndOf="@id/bed_t2l"
            app:layout_constraintStart_toStartOf="@id/bed_t2l"
            app:layout_constraintTop_toBottomOf="@id/bed_t2l"
            tools:text="Giường 1 Trái" />

        <!-- Right Column -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/bed_t3r"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:textColor="@color/seat_text_color"
            app:backgroundTint="@color/seat_background_tint"
            app:strokeColor="@color/seat_stroke_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/guideline_center"
            app:layout_constraintTop_toTopOf="@id/bed_t3l"
            tools:text="Giường 3 Phải" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bed_t2r"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:textColor="@color/seat_text_color"
            app:backgroundTint="@color/seat_background_tint"
            app:strokeColor="@color/seat_stroke_color"
            app:layout_constraintEnd_toEndOf="@id/bed_t3r"
            app:layout_constraintStart_toStartOf="@id/bed_t3r"
            app:layout_constraintTop_toBottomOf="@id/bed_t3r"
            tools:text="Giường 2 Phải" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bed_t1r"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:textColor="@color/seat_text_color"
            app:backgroundTint="@color/seat_background_tint"
            app:strokeColor="@color/seat_stroke_color"
            app:layout_constraintEnd_toEndOf="@id/bed_t2r"
            app:layout_constraintStart_toStartOf="@id/bed_t2r"
            app:layout_constraintTop_toBottomOf="@id/bed_t2r"
            tools:text="Giường 1 Phải" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
