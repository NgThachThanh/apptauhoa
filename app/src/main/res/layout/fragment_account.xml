<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    tools:context=".ui.account.AccountFragment">

    <!-- Header Section (Guest) -->
    <LinearLayout
        android:id="@+id/layout_guest_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quý khách chưa đăng nhập"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/btnLoginNow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng nhập ngay"
            android:textColor="?attr/colorOnPrimary"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

    <!-- Header Section (User) -->
    <LinearLayout
        android:id="@+id/layout_user_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_account_circle"
            app:tint="?attr/colorOnPrimary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Nguyễn Văn A"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_user_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="user@email.com"
                android:textColor="?attr/colorOnPrimary"
                android:alpha="0.8"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Main Content with Rounded Top -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="120dp"
        android:background="@drawable/background_rounded_top"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Menu Item: User Info (User Only) -->
            <RelativeLayout
                android:id="@+id/tvUserInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/account_menu_item_background"
                android:clickable="true"
                android:focusable="true"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:visibility="gone"
                tools:visibility="visible">

                <ImageView
                    android:id="@+id/icon_user_info"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/ic_account_circle" 
                    app:tint="?attr/colorPrimary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/icon_user_info"
                    android:layout_marginStart="16dp"
                    android:text="Thông tin tài khoản"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    app:srcCompat="@android:drawable/ic_media_play"
                    android:rotation="90"
                    app:tint="?attr/colorOnSurfaceVariant" />
            </RelativeLayout>

            <!-- Menu Item: Intro -->
            <RelativeLayout
                android:id="@+id/tvIntro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/account_menu_item_background"
                android:clickable="true"
                android:focusable="true"
                android:padding="16dp"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:id="@+id/icon_intro"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    app:srcCompat="@android:drawable/ic_dialog_info"
                    app:tint="?attr/colorPrimary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/icon_intro"
                    android:layout_marginStart="16dp"
                    android:text="Giới thiệu ga tàu"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    app:srcCompat="@android:drawable/ic_media_play"
                    android:rotation="90"
                    app:tint="?attr/colorOnSurfaceVariant" />
            </RelativeLayout>

            <!-- Menu Item: Routes -->
            <RelativeLayout
                android:id="@+id/tvRoutes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/account_menu_item_background"
                android:clickable="true"
                android:focusable="true"
                android:padding="16dp"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:id="@+id/icon_routes"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    app:srcCompat="@android:drawable/ic_menu_mapmode"
                    app:tint="?attr/colorPrimary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/icon_routes"
                    android:layout_marginStart="16dp"
                    android:text="Lộ trình phổ biến"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    app:srcCompat="@android:drawable/ic_media_play"
                    android:rotation="90"
                    app:tint="?attr/colorOnSurfaceVariant" />
            </RelativeLayout>

            <!-- Menu Item: Office -->
            <RelativeLayout
                android:id="@+id/tvOffice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/account_menu_item_background"
                android:clickable="true"
                android:focusable="true"
                android:padding="16dp"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:id="@+id/icon_office"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    app:srcCompat="@android:drawable/ic_menu_myplaces"
                    app:tint="?attr/colorPrimary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/icon_office"
                    android:layout_marginStart="16dp"
                    android:text="Văn phòng ga tàu"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    app:srcCompat="@android:drawable/ic_media_play"
                    android:rotation="90"
                    app:tint="?attr/colorOnSurfaceVariant" />
            </RelativeLayout>

            <!-- Menu Item: Settings -->
            <RelativeLayout
                android:id="@+id/tvSettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/account_menu_item_background"
                android:clickable="true"
                android:focusable="true"
                android:padding="16dp"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:id="@+id/icon_settings"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    app:srcCompat="@android:drawable/ic_menu_preferences"
                    app:tint="?attr/colorPrimary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/icon_settings"
                    android:layout_marginStart="16dp"
                    android:text="Cài đặt"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    app:srcCompat="@android:drawable/ic_media_play"
                    android:rotation="90"
                    app:tint="?attr/colorOnSurfaceVariant" />
            </RelativeLayout>

            <!-- Menu Item: Admin Dashboard (Admin Only) -->
            <RelativeLayout
                android:id="@+id/tvAdminDashboard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/account_menu_item_background"
                android:clickable="true"
                android:focusable="true"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:visibility="gone"
                tools:visibility="visible">

                <ImageView
                    android:id="@+id/icon_admin_dashboard"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    app:srcCompat="@android:drawable/ic_menu_manage"
                    app:tint="?attr/colorPrimary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/icon_admin_dashboard"
                    android:layout_marginStart="16dp"
                    android:text="Bảng điều khiển của quản trị viên"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    app:srcCompat="@android:drawable/ic_media_play"
                    android:rotation="90"
                    app:tint="?attr/colorOnSurfaceVariant" />
            </RelativeLayout>

            <!-- Menu Item: Logout (User Only) -->
            <RelativeLayout
                android:id="@+id/tvLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/account_menu_item_background"
                android:clickable="true"
                android:focusable="true"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:visibility="gone"
                tools:visibility="visible">

                <ImageView
                    android:id="@+id/icon_logout"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    app:srcCompat="@android:drawable/ic_lock_power_off"
                    app:tint="@android:color/holo_red_dark" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/icon_logout"
                    android:layout_marginStart="16dp"
                    android:text="Đăng xuất"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="16sp" />
            </RelativeLayout>

            <!-- This Spacer will push the contact info to the bottom -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- Contact Info Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:paddingBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Công ty TNHH Đường sắt Việt Nam"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="14sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Hotline: 1900 636 212"
                    android:autoLink="phone"
                    android:textColorLink="?attr/colorOnSurfaceVariant"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Email: support.dsvn@gmail.com"
                    android:autoLink="email"
                    android:textColorLink="?attr/colorOnSurfaceVariant"/>
            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>