<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurfaceVariant"
    tools:context=".ui.ticket.TicketDetailsFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:title="Chi tiết vé"
        app:navigationIcon="@drawable/ic_arrow_back"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/ticket_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Train and Route Info -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <TextView
                    android:id="@+id/origin_station_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceHeadline4"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="SGN" />

                <TextView
                    android:id="@+id/origin_station_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceBody2"
                    app:layout_constraintStart_toStartOf="@id/origin_station_code"
                    app:layout_constraintTop_toBottomOf="@id/origin_station_code"
                    tools:text="Sài Gòn" />

                <ImageView
                    android:id="@+id/train_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_train_track"
                    app:layout_constraintTop_toTopOf="@id/origin_station_code"
                    app:layout_constraintBottom_toBottomOf="@id/origin_station_code"
                    app:layout_constraintStart_toEndOf="@id/origin_station_code"
                    app:layout_constraintEnd_toStartOf="@id/destination_station_code"/>

                <TextView
                    android:id="@+id/train_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceLabelSmall"
                    app:layout_constraintStart_toStartOf="@id/train_icon"
                    app:layout_constraintEnd_toEndOf="@id/train_icon"
                    app:layout_constraintTop_toBottomOf="@id/train_icon"
                    tools:text="SE8"/>

                <TextView
                    android:id="@+id/destination_station_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceHeadline4"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="DADN" />

                <TextView
                    android:id="@+id/destination_station_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceBody2"
                    app:layout_constraintEnd_toEndOf="@id/destination_station_code"
                    app:layout_constraintTop_toBottomOf="@id/destination_station_code"
                    tools:text="Đà Nẵng" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Dashed line separator -->
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/bg_dashed_line" />

            <!-- Passenger and Seat Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hành khách"
                        android:textAppearance="?attr/textAppearanceLabelMedium"/>
                    <TextView
                        android:id="@+id/passenger_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:textStyle="bold"
                        tools:text="Nguyễn Văn A" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loại vé"
                        android:layout_marginTop="8dp"
                        android:textAppearance="?attr/textAppearanceLabelMedium"/>
                    <TextView
                        android:id="@+id/ticket_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?attr/textAppearanceBodyLarge"
                        tools:text="Người lớn" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Toa / Chỗ"
                        android:textAppearance="?attr/textAppearanceLabelMedium"/>
                    <TextView
                        android:id="@+id/seat_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:textStyle="bold"
                        tools:text="5 / 24A" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Giá vé"
                        android:layout_marginTop="8dp"
                        android:textAppearance="?attr/textAppearanceLabelMedium"/>
                    <TextView
                        android:id="@+id/ticket_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?attr/textAppearanceBodyLarge"
                        tools:text="975.000đ" />
                </LinearLayout>

            </LinearLayout>

            <!-- QR Code Section -->
            <ImageView
                android:id="@+id/qr_code_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="20dp"
                tools:src="@tools:sample/avatars" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>