<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurfaceVariant"
    tools:context=".ui.ticket.TicketDetailsFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:title="Chi tiết vé"
        app:navigationIcon="@drawable/ic_arrow_back"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/ticket_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Train and Route Info -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <TextView
                    android:id="@+id/origin_station_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceHeadline4"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="SGN" />

                <TextView
                    android:id="@+id/origin_station_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceBody2"
                    app:layout_constraintStart_toStartOf="@id/origin_station_code"
                    app:layout_constraintTop_toBottomOf="@id/origin_station_code"
                    tools:text="Sài Gòn" />

                <ImageView
                    android:id="@+id/train_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_train_track"
                    app:layout_constraintTop_toTopOf="@id/origin_station_code"
                    app:layout_constraintBottom_toBottomOf="@id/origin_station_code"
                    app:layout_constraintStart_toEndOf="@id/origin_station_code"
                    app:layout_constraintEnd_toStartOf="@id/destination_station_code"/>

                <TextView
                    android:id="@+id/train_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceLabelSmall"
                    app:layout_constraintStart_toStartOf="@id/train_icon"
                    app:layout_constraintEnd_toEndOf="@id/train_icon"
                    app:layout_constraintTop_toBottomOf="@id/train_icon"
                    tools:text="SE8"/>

                <TextView
                    android:id="@+id/destination_station_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceHeadline4"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="DADN" />

                <TextView
                    android:id="@+id/destination_station_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceBody2"
                    app:layout_constraintEnd_toEndOf="@id/destination_station_code"
                    app:layout_constraintTop_toBottomOf="@id/destination_station_code"
                    tools:text="Đà Nẵng" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Dashed line separator -->
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/bg_dashed_line" />

            <!-- All Details Info -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <TextView
                    android:id="@+id/label_passenger"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hành khách"
                    android:textAppearance="?attr/textAppearanceLabelMedium"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/passenger_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@+id/label_seat_info"
                    app:layout_constraintStart_toStartOf="@id/label_passenger"
                    app:layout_constraintTop_toBottomOf="@id/label_passenger"
                    tools:text="Nguyễn Thị Bích Trâm" />

                <TextView
                    android:id="@+id/label_seat_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Toa / Chỗ"
                    android:textAppearance="?attr/textAppearanceLabelMedium"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/seat_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@id/label_seat_info"
                    app:layout_constraintTop_toBottomOf="@id/label_seat_info"
                    tools:text="Toa 5 / 24A" />

                <TextView
                    android:id="@+id/label_ticket_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Loại vé"
                    android:textAppearance="?attr/textAppearanceLabelMedium"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/passenger_name" />

                <TextView
                    android:id="@+id/ticket_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceBodyLarge"
                    app:layout_constraintStart_toStartOf="@id/label_ticket_type"
                    app:layout_constraintTop_toBottomOf="@id/label_ticket_type"
                    tools:text="Người lớn" />

                <TextView
                    android:id="@+id/label_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Giá vé"
                    android:textAppearance="?attr/textAppearanceLabelMedium"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/seat_info" />

                <TextView
                    android:id="@+id/ticket_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceBodyLarge"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@id/label_price"
                    app:layout_constraintTop_toBottomOf="@id/label_price"
                    tools:text="975.000 đ" />


                <TextView
                    android:id="@+id/label_departure_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Giờ đi"
                    android:textAppearance="?attr/textAppearanceLabelMedium"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ticket_type" />

                <TextView
                    android:id="@+id/departure_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceBodyLarge"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@id/label_departure_time"
                    app:layout_constraintTop_toBottomOf="@id/label_departure_time"
                    tools:text="19:30, 24/12" />

                <TextView
                    android:id="@+id/label_arrival_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Giờ đến"
                    android:textAppearance="?attr/textAppearanceLabelMedium"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ticket_price" />

                <TextView
                    android:id="@+id/arrival_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceBodyLarge"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@id/label_arrival_time"
                    app:layout_constraintTop_toBottomOf="@id/label_arrival_time"
                    tools:text="08:15, 25/12" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_cancel_ticket"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="20dp"
                android:text="Hủy vé"
                app:strokeColor="?attr/colorError"
                android:textColor="?attr/colorError" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
