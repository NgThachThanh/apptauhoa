<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_trip"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    app:cardBackgroundColor="?attr/colorSurface"
    app:cardCornerRadius="20dp"
    app:cardElevation="1dp"
    app:strokeWidth="1dp"
    app:strokeColor="?android:attr/listDivider">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:padding="16dp">

        <!-- Row 1: Booking Date and Status -->
        <TextView
            android:id="@+id/txt_booking_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBody1"
            android:textColor="?attr/colorOnSurface"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="20/05/2024" />

        <TextView
            android:id="@+id/txt_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorPrimary"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="#3409" />

        <!-- Row 2: Time -->
        <TextView
            android:id="@+id/txt_departure_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textColor="?attr/colorOnSurface"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_booking_date"
            tools:text="15:58" />

        <TextView
            android:id="@+id/txt_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorOnSurfaceVariant"
            app:layout_constraintBottom_toBottomOf="@+id/txt_departure_time"
            app:layout_constraintEnd_toStartOf="@id/txt_arrival_time"
            app:layout_constraintStart_toEndOf="@id/txt_departure_time"
            app:layout_constraintTop_toTopOf="@id/txt_departure_time"
            tools:text="7h 0m" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginHorizontal="8dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintBottom_toBottomOf="@id/txt_duration"
            app:layout_constraintEnd_toStartOf="@id/txt_duration"
            app:layout_constraintStart_toEndOf="@id/txt_departure_time"
            app:layout_constraintTop_toTopOf="@id/txt_duration" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginHorizontal="8dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintBottom_toBottomOf="@id/txt_duration"
            app:layout_constraintEnd_toStartOf="@id/txt_arrival_time"
            app:layout_constraintStart_toEndOf="@id/txt_duration"
            app:layout_constraintTop_toTopOf="@id/txt_duration" />

        <TextView
            android:id="@+id/txt_arrival_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorOnSurface"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/txt_departure_time"
            tools:text="22:58" />

        <!-- Row 3: Stations -->
        <TextView
            android:id="@+id/txt_origin_station_line1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorOnSurfaceVariant"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_departure_time"
            tools:text="Sài Gòn - Hà Nội" />

        <TextView
            android:id="@+id/txt_train_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_origin_station_line1"
            tools:text="TRIP123" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>