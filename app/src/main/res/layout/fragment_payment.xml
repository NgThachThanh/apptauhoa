<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.payment.PaymentFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Summary Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/summary_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/text_trip_summary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="SE8 | Sài Gòn -> Đà Nẵng | 24/12/2024" />

                <TextView
                    android:id="@+id/text_seats_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    app:layout_constraintTop_toBottomOf="@id/text_trip_summary"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="Toa 5: 24A, 24B" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Promotions -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_layout_promo"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:hint="@string/promo_code_hint"
            app:layout_constraintTop_toBottomOf="@id/summary_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_apply_promo">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_text_promo_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/button_apply_promo"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginEnd="16dp"
            android:text="@string/apply_promo_button"
            app:layout_constraintTop_toTopOf="@+id/input_layout_promo"
            app:layout_constraintBottom_toBottomOf="@id/input_layout_promo"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Price Summary -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/price_summary_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:padding="16dp"
            android:background="@drawable/bg_rounded_container"
            app:layout_constraintTop_toBottomOf="@id/input_layout_promo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/label_original_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/provisional_total_label"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/text_original_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="1.200.000 đ"
                app:layout_constraintTop_toTopOf="@+id/label_original_price"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/label_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/discount_label"
                android:textColor="?attr/colorError"
                app:layout_constraintTop_toBottomOf="@id/label_original_price"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/text_discount_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/colorError"
                tools:text="- 240.000 đ"
                app:layout_constraintTop_toTopOf="@+id/label_discount"
                app:layout_constraintEnd_toEndOf="parent" />

            <View
                android:id="@+id/divider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintTop_toBottomOf="@id/label_discount"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/label_final_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/final_total_label"
                android:textAppearance="?attr/textAppearanceTitleMedium"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/divider"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/text_final_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceTitleMedium"
                android:textStyle="bold"
                tools:text="960.000 đ"
                app:layout_constraintTop_toTopOf="@+id/label_final_price"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
        
        <!-- Payment Method Selection -->
        <RadioGroup
            android:id="@+id/radio_group_payment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@+id/price_summary_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <RadioButton
                android:id="@+id/radio_cash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cash_payment_option" />

            <RadioButton
                android:id="@+id/radio_qr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/qr_payment_option" />

        </RadioGroup>

        <!-- Payment Details -->
        <FrameLayout
            android:id="@+id/payment_details_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/radio_group_payment"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <include android:id="@+id/layout_cash_details" layout="@layout/include_cash_payment" android:visibility="gone"/>
            <include android:id="@+id/layout_qr_details" layout="@layout/include_qr_payment" android:visibility="gone"/>

        </FrameLayout>

        <!-- Confirm Button -->
        <Button
            android:id="@+id/button_confirm_booking"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@string/confirm_booking_button"
            app:layout_constraintTop_toBottomOf="@id/payment_details_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
