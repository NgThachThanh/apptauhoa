<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?attr/colorSurface"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chọn số hành khách"
        android:textColor="?attr/colorOnSurface"
        android:textAppearance="?attr/textAppearanceHeadline6" />

    <!-- Adults -->
    <LinearLayout
        android:id="@+id/counter_adults"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Người lớn"
                android:textColor="?attr/colorOnSurface" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Từ 12 tuổi"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="12sp"/>
        </LinearLayout>

        <ImageButton
            android:id="@+id/adults_minus_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Giảm người lớn"
            app:srcCompat="@drawable/ic_remove"
            app:tint="?attr/colorPrimary" />

        <TextView
            android:id="@+id/adults_count_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="1"
            android:textColor="?attr/colorOnSurface"
            android:textAppearance="?attr/textAppearanceBody1" />

        <ImageButton
            android:id="@+id/adults_plus_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Tăng người lớn"
            app:srcCompat="@drawable/ic_add"
            app:tint="?attr/colorPrimary" />
    </LinearLayout>

    <!-- Children -->
    <LinearLayout
        android:id="@+id/counter_children"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trẻ em"
                android:textColor="?attr/colorOnSurface" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2–11 tuổi"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="12sp"/>
        </LinearLayout>

        <ImageButton
            android:id="@+id/children_minus_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Giảm trẻ em"
            app:srcCompat="@drawable/ic_remove"
            app:tint="?attr/colorPrimary" />

        <TextView
            android:id="@+id/children_count_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="0"
            android:textColor="?attr/colorOnSurface"
            android:textAppearance="?attr/textAppearanceBody1" />

        <ImageButton
            android:id="@+id/children_plus_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Tăng trẻ em"
            app:srcCompat="@drawable/ic_add"
            app:tint="?attr/colorPrimary" />
    </LinearLayout>

    <!-- Infants -->
    <LinearLayout
        android:id="@+id/counter_infants"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sơ sinh"
                android:textColor="?attr/colorOnSurface" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dưới 2 tuổi"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="12sp"/>
        </LinearLayout>

        <ImageButton
            android:id="@+id/infants_minus_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Giảm sơ sinh"
            app:srcCompat="@drawable/ic_remove"
            app:tint="?attr/colorPrimary" />

        <TextView
            android:id="@+id/infants_count_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="0"
            android:textColor="?attr/colorOnSurface"
            android:textAppearance="?attr/textAppearanceBody1" />

        <ImageButton
            android:id="@+id/infants_plus_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Tăng sơ sinh"
            app:srcCompat="@drawable/ic_add"
            app:tint="?attr/colorPrimary" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_passengers_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/holo_red_dark"
        android:visibility="gone"
        android:text="Số sơ sinh không được vượt quá số người lớn."/>
        
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancel_button"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Hủy" />

        <Button
            android:id="@+id/confirm_button"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Xác nhận" />
    </LinearLayout>

</LinearLayout>