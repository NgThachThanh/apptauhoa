<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chọn số hành khách"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Adults -->
    <LinearLayout
        android:id="@+id/counter_adults"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Người lớn" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Từ 12 tuổi"
                android:textSize="12sp"/>
        </LinearLayout>

        <ImageButton
            android:id="@+id/adults_minus_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="Giảm người lớn"
            android:src="@drawable/ic_remove" />

        <TextView
            android:id="@+id/adults_count_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="1"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/adults_plus_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="Tăng người lớn"
            android:src="@drawable/ic_add" />
    </LinearLayout>

    <!-- Children -->
    <LinearLayout
        android:id="@+id/counter_children"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trẻ em" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2–11 tuổi"
                android:textSize="12sp"/>
        </LinearLayout>

        <ImageButton
            android:id="@+id/children_minus_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="Giảm trẻ em"
            android:src="@drawable/ic_remove" />

        <TextView
            android:id="@+id/children_count_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="0"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/children_plus_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="Tăng trẻ em"
            android:src="@drawable/ic_add" />
    </LinearLayout>

    <!-- Infants -->
    <LinearLayout
        android:id="@+id/counter_infants"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sơ sinh" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dưới 2 tuổi"
                android:textSize="12sp"/>
        </LinearLayout>

        <ImageButton
            android:id="@+id/infants_minus_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="Giảm sơ sinh"
            android:src="@drawable/ic_remove" />

        <TextView
            android:id="@+id/infants_count_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="0"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/infants_plus_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="Tăng sơ sinh"
            android:src="@drawable/ic_add" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_passengers_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/holo_red_dark"
        android:visibility="gone"
        android:text="Số sơ sinh không được vượt quá số người lớn."/>
        
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancel_button"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Hủy" />

        <Button
            android:id="@+id/confirm_button"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Xác nhận" />
    </LinearLayout>

</LinearLayout>