<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nested_scroll_view_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:clipToPadding="false"
        android:background="?attr/colorSurface"
        tools:context=".ui.home.HomeFragment">

        <!-- Station Selection Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/station_selection_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Origin Station -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/origin_station_row"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                    <!-- Views inside remain the same -->
                    <ImageView
                        android:id="@+id/origin_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:srcCompat="@drawable/ic_directions"
                        app:tint="?attr/colorOnSurfaceVariant"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <TextView
                        android:id="@+id/origin_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="Nơi đi"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="12sp"
                        app:layout_constraintStart_toEndOf="@id/origin_icon"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/origin_value"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface"
                        tools:text="Nơi khởi hành"
                        app:layout_constraintStart_toStartOf="@id/origin_label"
                        app:layout_constraintTop_toBottomOf="@id/origin_label"
                        app:layout_constraintEnd_toEndOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:id="@+id/divider"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider"
                    app:layout_constraintTop_toBottomOf="@id/origin_station_row"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"/>

                <!-- Destination Station -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/destination_station_row"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    app:layout_constraintTop_toBottomOf="@id/divider"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                     <!-- Views inside remain the same -->
                    <ImageView
                        android:id="@+id/destination_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:srcCompat="@drawable/ic_my_location"
                        app:tint="?attr/colorOnSurfaceVariant"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <TextView
                        android:id="@+id/destination_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="Nơi đến"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="12sp"
                        app:layout_constraintStart_toEndOf="@id/destination_icon"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/destination_value"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface"
                        tools:text="Quý khách muốn đi đâu?"
                        app:layout_constraintStart_toStartOf="@id/destination_label"
                        app:layout_constraintTop_toBottomOf="@id/destination_label"
                        app:layout_constraintEnd_toEndOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <ImageButton
                    android:id="@+id/swap_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_swap_vertical"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/station_error_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ga đi và ga đến không được trùng nhau."
            android:textColor="?attr/colorError"
            android:visibility="gone"
            android:layout_marginStart="18dp"
            app:layout_constraintTop_toBottomOf="@id/station_selection_card"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"/>

        <!-- Departure Date Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/panel_departure_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/station_error_message"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center_vertical">
                <!-- Views inside remain the same -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView android:id="@+id/txt_departure_label" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Ngày khởi hành" android:textColor="?attr/colorOnSurfaceVariant" android:textSize="12sp" />
                    <TextView android:id="@+id/txt_departure_value" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Chọn ngày" android:textColor="?attr/colorOnSurface" android:textSize="16sp" android:textStyle="bold" />
                </LinearLayout>
                <ImageView android:id="@+id/btn_calendar" android:layout_width="48dp" android:layout_height="48dp" app:srcCompat="@drawable/ic_calendar" app:tint="?attr/colorOnSurfaceVariant"/>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/txt_departure_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vui lòng chọn ngày khởi hành."
            android:textColor="?attr/colorError"
            android:visibility="gone"
            android:layout_marginStart="18dp"
            app:layout_constraintTop_toBottomOf="@id/panel_departure_date"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="4dp"/>
        
        <!-- Passengers Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/panel_passengers"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/txt_departure_error"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center_vertical">
                <!-- Views inside remain the same -->
                 <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView android:id="@+id/txt_passengers_label" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Hành khách" android:textColor="?attr/colorOnSurfaceVariant" android:textSize="12sp" />
                    <TextView android:id="@+id/txt_passengers_value" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="1 người lớn" android:textColor="?attr/colorOnSurface" android:textSize="16sp" android:textStyle="bold" />
                </LinearLayout>
                <ImageView android:id="@+id/btn_passengers_icon" android:layout_width="48dp" android:layout_height="48dp" app:srcCompat="@drawable/ic_passengers" app:tint="?attr/colorOnSurfaceVariant"/>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <Button
            android:id="@+id/btn_search_trips"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Tìm chuyến đi"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/panel_passengers"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Promotions Section -->
        <TextView
            android:id="@+id/textView_promotion_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ưu đãi &amp; Khuyến mãi"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:layout_marginTop="24dp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_search_trips" />

        <TextView
            android:id="@+id/textViewSeeAllPromotions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xem tất cả"
            android:textColor="?attr/colorPrimary"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/textView_promotion_title"
            app:layout_constraintBottom_toBottomOf="@id/textView_promotion_title" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_promotions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:clipToPadding="false"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView_promotion_title"
            tools:listitem="@layout/item_promotion"
            tools:itemCount="3"/>

        <!-- Suggestion Section -->
        <TextView
            android:id="@+id/suggestion_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hôm nay đi đâu?"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:layout_marginTop="24dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@id/recycler_view_promotions"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_suggestion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android_layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/suggestion_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!-- Views inside remain the same -->
                 <ImageView
                    android:id="@+id/image_view_suggestion"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    tools:src="@tools:sample/backgrounds/scenic"
                    android:background="?attr/colorSecondary"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/text_view_suggestion_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    tools:text="Khám phá Thành phố đáng sống"
                    app:layout_constraintTop_toBottomOf="@id/image_view_suggestion"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <Button
                    android:id="@+id/button_find_ticket_suggestion"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tìm vé ngay"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintTop_toBottomOf="@id/text_view_suggestion_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
