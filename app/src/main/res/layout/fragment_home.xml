<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nested_scroll_view_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        tools:context=".ui.home.HomeFragment">

        <!-- Background for the station selection area -->
        <View
            android:id="@+id/station_panel_background"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_station_panel"
            app:layout_constraintTop_toTopOf="@id/origin_station_row"
            app:layout_constraintBottom_toBottomOf="@id/destination_station_row"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Origin Station -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/origin_station_row"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            
            <ImageView android:id="@+id/origin_icon" android:layout_width="24dp" android:layout_height="24dp" app:srcCompat="@drawable/ic_directions" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent" />
            <TextView android:id="@+id/origin_label" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="12dp" android:text="Nơi đi" android:textSize="12sp" app:layout_constraintStart_toEndOf="@id/origin_icon" app:layout_constraintTop_toTopOf="parent" />
            <TextView android:id="@+id/origin_value" android:layout_width="0dp" android:layout_height="wrap_content" android:textSize="16sp" android:textStyle="bold" tools:text="Nơi khởi hành" app:layout_constraintStart_toStartOf="@id/origin_label" app:layout_constraintTop_toBottomOf="@id/origin_label" app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintTop_toBottomOf="@id/origin_station_row"
            app:layout_constraintStart_toStartOf="@id/station_panel_background"
            app:layout_constraintEnd_toEndOf="@id/station_panel_background"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>

        <!-- Destination Station -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/destination_station_row"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/divider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            
            <ImageView android:id="@+id/destination_icon" android:layout_width="24dp" android:layout_height="24dp" app:srcCompat="@drawable/ic_my_location" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent" />
            <TextView android:id="@+id/destination_label" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="12dp" android:text="Nơi đến" android:textSize="12sp" app:layout_constraintStart_toEndOf="@id/destination_icon" app:layout_constraintTop_toTopOf="parent" />
            <TextView android:id="@+id/destination_value" android:layout_width="0dp" android:layout_height="wrap_content" android:textSize="16sp" android:textStyle="bold" tools:text="Quý khách muốn đi đâu?" app:layout_constraintStart_toStartOf="@id/destination_label" app:layout_constraintTop_toBottomOf="@id/destination_label" app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageButton
            android:id="@+id/swap_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_swap_vertical"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="@id/station_panel_background"
            app:layout_constraintTop_toTopOf="@id/station_panel_background"
            app:layout_constraintBottom_toBottomOf="@id/station_panel_background"/>
        
        <TextView android:id="@+id/station_error_message" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Ga đi và ga đến không được trùng nhau." android:textColor="@android:color/holo_red_dark" android:visibility="gone" app:layout_constraintTop_toBottomOf="@id/station_panel_background" app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"/>
        
        <LinearLayout android:id="@+id/panel_departure_date" android:layout_width="0dp" android:layout_height="wrap_content" android:orientation="horizontal" android:background="@drawable/bg_station_panel" android:padding="12dp" android:layout_marginTop="16dp" android:gravity="center_vertical" app:layout_constraintTop_toBottomOf="@id/station_error_message" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent">
            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical">
                <TextView android:id="@+id/txt_departure_label" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Ngày khởi hành" android:textSize="12sp" />
                <TextView android:id="@+id/txt_departure_value" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Chọn ngày" android:textSize="16sp" android:textStyle="bold" />
            </LinearLayout>
            <ImageView android:id="@+id/btn_calendar" android:layout_width="48dp" android:layout_height="48dp" app:srcCompat="@drawable/ic_calendar"/>
        </LinearLayout>
        
        <TextView android:id="@+id/txt_departure_error" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Vui lòng chọn ngày khởi hành." android:textColor="@android:color/holo_red_dark" android:visibility="gone" app:layout_constraintTop_toBottomOf="@id/panel_departure_date" app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="4dp"/>
        
        <LinearLayout android:id="@+id/panel_passengers" android:layout_width="0dp" android:layout_height="wrap_content" android:orientation="horizontal" android:background="@drawable/bg_station_panel" android:padding="12dp" android:layout_marginTop="16dp" android:gravity="center_vertical" app:layout_constraintTop_toBottomOf="@id/txt_departure_error" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent">
            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical">
                <TextView android:id="@+id/txt_passengers_label" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Hành khách" android:textSize="12sp" />
                <TextView android:id="@+id/txt_passengers_value" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="1 người lớn" android:textSize="16sp" android:textStyle="bold" />
            </LinearLayout>
            <ImageView android:id="@+id/btn_passengers_icon" android:layout_width="48dp" android:layout_height="48dp" app:srcCompat="@drawable/ic_passengers"/>
        </LinearLayout>
        
        <Button android:id="@+id/btn_search_trips" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Tìm chuyến đi" android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@id/panel_passengers" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Promotions Section -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_promotion_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/btn_search_trips"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <TextView android:id="@+id/textView_promotion_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Ưu đãi &amp; Khuyến mãi" android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent" />
            <TextView android:id="@+id/textView_see_all_promotions" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Xem thêm" android:textColor="?attr/colorPrimary" android:background="?attr/selectableItemBackground" android:padding="8dp" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_promotions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:clipToPadding="false"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_promotion_header"
            tools:listitem="@layout/item_promotion"/>

        <!-- Destination Suggestion Section -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_suggestion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/recycler_view_promotions"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView android:id="@+id/imageView_suggestion_banner" android:layout_width="0dp" android:layout_height="120dp" android:scaleType="centerCrop" android:src="@drawable/placeholder_promotion_banner" app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
                <TextView android:id="@+id/textView_suggestion_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6" android:textColor="@android:color/white" android:layout_marginStart="16dp" android:layout_marginBottom="8dp" tools:text="Hôm nay đi đâu?" app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toTopOf="@id/textView_suggestion_subtitle"/>
                <TextView android:id="@+id/textView_suggestion_subtitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" android:textColor="@android:color/white" android:layout_marginStart="16dp" android:layout_marginBottom="16dp" tools:text="Khám phá Thành phố đáng sống" app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="@id/imageView_suggestion_banner"/>
                <Button android:id="@+id/button_find_ticket_suggestion" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Tìm vé ngay" android:layout_margin="16dp" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@id/imageView_suggestion_banner"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>