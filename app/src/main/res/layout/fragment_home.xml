<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:id="@+id/station_panel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_station_panel"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Origin Station -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/origin_station_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <ImageView
                android:id="@+id/origin_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:srcCompat="@drawable/ic_directions"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/origin_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Nơi đi"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@id/origin_icon"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/origin_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Nơi khởi hành"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/origin_icon"
                app:layout_constraintTop_toBottomOf="@id/origin_label"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <!-- Destination Station -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/destination_station_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <ImageView
                android:id="@+id/destination_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:srcCompat="@drawable/ic_my_location"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/destination_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Nơi đến"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@id/destination_icon"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/destination_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Quý khách muốn đi đâu?"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/destination_icon"
                app:layout_constraintTop_toBottomOf="@id/destination_label"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/swap_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_swap_vertical"
        app:layout_constraintEnd_toEndOf="@id/station_panel"
        app:layout_constraintTop_toTopOf="@id/station_panel"
        app:layout_constraintBottom_toBottomOf="@id/station_panel"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:id="@+id/station_error_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ga đi và ga đến không được trùng nhau."
        android:textColor="@android:color/holo_red_dark"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/station_panel"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Departure Date Panel -->
    <LinearLayout
        android:id="@+id/panel_departure_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_station_panel"
        android:padding="12dp"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:contentDescription="Ngày khởi hành. Nhấn để chọn ngày."
        app:layout_constraintTop_toBottomOf="@id/station_error_message"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_departure_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày khởi hành"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txt_departure_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chọn ngày"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:id="@+id/btn_calendar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:srcCompat="@drawable/ic_calendar"
            android:contentDescription="Chọn ngày khởi hành."/>

    </LinearLayout>

    <TextView
        android:id="@+id/txt_departure_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vui lòng chọn ngày khởi hành."
        android:textColor="@android:color/holo_red_dark"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/panel_departure_date"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="4dp"/>
        
    <!-- Passengers Panel -->
    <LinearLayout
        android:id="@+id/panel_passengers"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_station_panel"
        android:padding="12dp"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:contentDescription="Hành khách. Nhấn để thay đổi."
        app:layout_constraintTop_toBottomOf="@id/txt_departure_error"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_passengers_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hành khách"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txt_passengers_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 người lớn, 0 trẻ em, 0 sơ sinh"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:id="@+id/btn_passengers_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:srcCompat="@drawable/ic_passengers"/>

    </LinearLayout>
        
    <Button
        android:id="@+id/btn_search_trips"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tìm chuyến đi"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/panel_passengers"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>