<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="4dp">

    <TextView
        android:id="@+id/row_number"
        android:layout_width="30dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:textAppearance="?attr/textAppearanceBodyMedium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="1" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/seat_a"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:checkable="true"
        android:textColor="@color/seat_text_color"
        app:backgroundTint="@color/seat_background_tint"
        app:strokeColor="@color/seat_stroke_color"
        app:layout_constraintEnd_toStartOf="@id/seat_b"
        app:layout_constraintStart_toEndOf="@id/row_number"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="1A" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/seat_b"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:checkable="true"
        android:textColor="@color/seat_text_color"
        app:backgroundTint="@color/seat_background_tint"
        app:strokeColor="@color/seat_stroke_color"
        app:layout_constraintEnd_toStartOf="@id/aisle"
        app:layout_constraintStart_toEndOf="@id/seat_a"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="1B" />

    <Space
        android:id="@+id/aisle"
        android:layout_width="32dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toStartOf="@id/seat_c"
        app:layout_constraintStart_toEndOf="@id/seat_b"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/seat_c"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:checkable="true"
        android:textColor="@color/seat_text_color"
        app:backgroundTint="@color/seat_background_tint"
        app:strokeColor="@color/seat_stroke_color"
        app:layout_constraintEnd_toStartOf="@id/seat_d"
        app:layout_constraintStart_toEndOf="@id/aisle"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="1C" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/seat_d"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:checkable="true"
        android:textColor="@color/seat_text_color"
        app:backgroundTint="@color/seat_background_tint"
        app:strokeColor="@color/seat_stroke_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/seat_c"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="1D" />

</androidx.constraintlayout.widget.ConstraintLayout>
