<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State when the seat is selected by the user -->
    <item android:state_checked="true"
          android:color="@color/seat_text_selected" />
          
    <!-- State when the seat is sold, pending, or otherwise not interactable -->
    <item android:state_enabled="false"
          android:color="@color/seat_text_sold_pending" />
          
    <!-- Default state (available) -->
    <item android:color="@color/seat_text_available" />
</selector>
