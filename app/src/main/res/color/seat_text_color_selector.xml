<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State: Selected (dark background) -> White text -->
    <item android:state_selected="true" android:color="@android:color/white" />
    
    <!-- State: Booked/Disabled (light grey background) -> Grey text -->
    <item android:state_enabled="false" android:color="#9E9E9E" />
    
    <!-- Default State: Available (green border) -> Green text -->
    <item android:color="#4CAF50" />
</selector>